<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/custom_bg_dialog"
    android:paddingHorizontal="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="6dp"
        android:layout_gravity="center_horizontal">
        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@drawable/custom_bg_radius10_green"/>
        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/custom_bg_radius10_green"/>
        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/custom_bg_radius10_green"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_bg_radius10_white"
            android:padding="10dp">
            <TextView
                android:id="@+id/tvNameSurahArab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al Fatihah"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                style="@style/typoBig"
                android:textColor="@color/colorDarkBlue"/>
            <TextView
                android:id="@+id/tvNameSurah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al Fatihah"
                android:layout_gravity="center_horizontal"
                style="@style/typoNormal"
                android:textColor="@color/colorDarkBlue"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_radius10_green"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:paddingHorizontal="10dp">
                <TextView
                    android:id="@+id/tvKota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/typoSmallBold"
                    android:text="Madinah"
                    android:layout_marginVertical="2dp"
                    android:textColor="@color/colorWhite"/>
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:layout_marginHorizontal="5dp"/>
                <TextView
                    android:id="@+id/tvNomorAyat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/typoSmallBold"
                    android:text="7"
                    android:layout_marginVertical="2dp"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/typoSmallBold"
                    android:text=" Ayat"
                    android:layout_marginVertical="2dp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListAyat"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>